extends layout.pug
block content
  .container
    .row
      .col
        h3.display-4.text-center Complain
        p.text-left 
          form
            .form-group
              label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email')
            .form-group
              label(for='exampleSelect1') What is you comlaint?
              select#exampleSelect1.form-control
                option Delivery took too long
                option Pizza Burnt 
                option Wrong toppings
                option Something else
            .form-group
              label(for='exampleTextarea') Please provide more detail on your complaint
              textarea#exampleTextarea.form-control(rows='3')  
            button.btn.btn-primary(type='submit') Submit
            