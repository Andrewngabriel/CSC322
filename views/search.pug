extends layout.pug
block content
  .jumbotron
    .container
        h1.display-4.text-center Search
  .container
    if orderId
      .row.justify-content-center
        .col
          .card
            .card-body
              h6.card-title= ("Order ID: " + orderId)
              p.card-text= ("Date: " + date)
              p.card-text= ("Address: " + address)
              p.card-text= ("Pizza Size: " + pizzaSize)
              p.card-text= ("Pizza Toppings: " + pizzaToppings)
              p.card-text= ("Drink: " + drink)
              p.card-text= ("Salad: " + salad)
              p.card-text= ("Dough: " + dough)
    if deliveryId
      .row.justify-content-center
        .col
          .card
            .card-body
              h6.card-title= ("ID: " + deliveryId)
              p.card-text= ("Email: " + deliveryEmail)
              p.card-text= ("Name: " + deliveryName)
              p.card-text= ("Availability: " + deliveryAvailability)
    br
    .row.justify-content-center
      .col-6.text-center
        form(method="POST")
          form
            .form-group
              input.form-control(type="text" placeholder="Search orders by ID" name="orderNumber")
            .form-group
              input.form-control(type="text" placeholder="Search Delivery Personnel" name="deliveryId")
            button.btn.btn-primary(type="submit") Search